/**index.wxss**/
.home{
  width: calc(100% - 60rpx);
  min-height: 100vh;
  background:linear-gradient(180deg,rgba(31,34,57,1) 0%,rgba(16,18,27,1) 100%);
  padding: 0 30rpx;
}

.location{
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFangSC;
  font-weight:600;
  color:rgba(255,255,255,1);
  line-height:38rpx;
  margin: 30rpx 0;
}

/* 本月目标 */
.home-month{
  background:rgba(46,51,74,1);
  box-shadow:0px 2rpx 10rpx 0px rgba(0,0,0,0.5);
  border-radius:20rpx;
}

.home-shop{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.home-month-title{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(151,153,164,1);
  line-height:26rpx;
  margin-bottom: 30rpx;
}

.homo-month-li{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
}


.home-month-num{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 120rpx;
}

.homo-month-up{
  font-size:40rpx;
  font-family:DIN-Medium,DIN;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:30rpx;
}

.homo-month-bottom{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(151,153,164,1);
  line-height:24rpx;
}

