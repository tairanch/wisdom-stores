/**flowcard.wxss**/
.com-flow-card{
  width: 100%;
  height: 268rpx;
  background:rgba(46,51,74,1);
  box-shadow:0px 2rpx 10rpx 0px rgba(0,0,0,0.5);
  border-radius:20rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-around;

}

.flow-ul{
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
}

.flow-title{
  width: 20%;
  font-size:26rpx;
  font-weight:400;
  color:rgba(151,153,164,1);
  line-height:24px;
}

.flew-width-50{
  width: 60%;
  display: flex;
  justify-content: center;
}

.flow-smallsize{
  font-size: 26rpx;
  line-height: 58rpx;
}

.flow-size {
  font-size:44rpx;
  color:rgba(255,255,255,1);
}