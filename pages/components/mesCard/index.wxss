/**index.wxss**/
.com-mescard{
  height:155rpx;
  background:rgba(46,51,74,1);
  box-shadow:0px 2rpx 10rpx 0px rgba(0,0,0,0.5);
  border-radius:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.com-mescard-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.com-mescard-title{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(151,153,164,1);
  line-height:33rpx;
  margin-bottom: 10rpx;
}

.com-mescard-num{
  font-size:36rpx;
  font-family:DIN-Medium,DIN;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:30rpx;
}
